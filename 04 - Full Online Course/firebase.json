{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
    ],
    "source": "./functions",
    "ignore": [
      "**/.git/**",
      "**/node_modules/**",
      "**/public/**"
    ]
  },
  "hosting": {
    "public": "public",
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
